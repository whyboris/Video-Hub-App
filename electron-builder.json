{
  "productName": "Video Hub App 3",
  "appId": "com.videohubapp.videohubapp3",
  "copyright": "Copyright Â© 2020 Boris Yakubchik",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!angular.json",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "extraResources": [
    {
      "from": "src/assets/icons/mac/touch-bar",
      "to": "assets"
    }
  ],
  "win": {
    "icon": "dist/favicon",
    "asar": true,
    "asarUnpack": [
      "../node_modules/@ffmpeg-installer",
      "../node_modules/@ffprobe-installer"
    ],
    "target": [
      "nsis"
    ]
  },
  "mac": {
    "category": "public.app-category.video",
    "target": "dmg",
    "icon": "src/assets/icons.icns",
    "asar": true,
    "asarUnpack": [
      "../node_modules/@ffmpeg-installer",
      "../node_modules/@ffprobe-installer"
    ]
  },
  "linux": {
    "icon": "src/assets/icons.icns",
    "target": [
      "AppImage"
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true
  },
  "fileAssociations": {
    "ext": "vha2",
    "name": "Video Hub App 3 file",
    "role": "Editor"
  }
}
